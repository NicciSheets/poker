<html>
   <head>
        <!-- <script src="/js/poker.js"></script> -->
        <link rel="stylesheet" type="text/css" href="css/poker.css">
    </head>
    
	<form method="post" action="/poker">
    <body>
    <div class="who_won">	
    	<%= "#{winner(game_output)}" %><br>
    </div>
    <div class="hands">
	    <div class="black_hand">	
	    	<%= "Black:" %>
	    	<div class="b_hand">
	    		<% @black.cards_sorted.each do |v| %>
	    			<img class="card" width="80" height="100" src="/images/<%=v.value%><%=v.suit%>.png">
	    		<% end %>
	    	</div> 
	    	<%= "#{@black.hand_rating}" %>
	    </div>
	    <div class="white_hand">    	
	    	<%= "White:" %>
	    	<div class="w_white">
	    		<% @white.cards_sorted.each do |v| %>
	            	<img class="card" width="80" height="100" src="/images/<%=v.value%><%=v.suit%>.png">
	       		<% end %>
	       	</div>
	       	<%= "#{@white.hand_rating}" %>
	    </div>
	</div>
    <button class="btn refresh" value="Refresh Page" onClick="window.location.reload()">New Hand</button>
    
    	
    	
   

    </body>
	</form>

